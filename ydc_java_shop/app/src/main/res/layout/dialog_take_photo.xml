<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogback">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/divide_50_dp"
        android:layout_marginLeft="@dimen/divide_10_dp"
        android:layout_marginRight="@dimen/divide_10_dp"
        android:layout_above="@+id/ll_dialog_bottom"
        >
        <ImageView
            android:id="@+id/iv_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:visibility="gone"
            android:focusable="false"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="#00000000"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请务必按示例图上传，注意拍摄清晰"
            android:textColor="@color/text_white_color"
            android:background="@null"
            android:layout_marginTop="@dimen/divide_10_dp"
            android:layout_marginBottom="@dimen/divide_10_dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textSize="@dimen/size_12_sp"
            />
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="6dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#B4B5B8"
            android:text="上传头像"
            android:background="@drawable/dialog_bg_white_top"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/text_gray_color"/>
        <TextView
            android:id="@+id/tv_take_photo"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text=" 拍照"
            android:textColor="#4B85FA"
            android:background="@color/white"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/text_gray_color"/>
        <TextView
            android:id="@+id/tv_check_photo"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="从手机相册选择"
            android:textColor="#4B85FA"
            android:background="@drawable/dialog_bg_white_bottom"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="@dimen/divide_10_dp"
            android:gravity="center"
            android:background="@drawable/btn_white_radius_bg"
            android:text="取消"
            android:textColor="#888A8F"
            android:textSize="16sp"
            />
    </LinearLayout>
</RelativeLayout>