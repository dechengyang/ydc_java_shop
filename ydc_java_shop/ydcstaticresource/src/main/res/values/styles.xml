<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--tab的主题-->
    <style name="Tab_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- title的标题 -->
    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Title theme -->
    <style name="Text.Title_Button" parent="@style/Text">
        <item name="android:textColor">@color/black_6</item>
        <item name="android:textSize">@dimen/size_15_sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">@dimen/size_20_sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Dialog的动画效果-->
    <style name="dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_start</item>
        <item name="android:windowExitAnimation">@anim/dialog_close</item>
    </style>

    <!--AlertDialog的动画效果-->
    <style name="alert_dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/alert_dialog_start</item>
        <item name="android:windowExitAnimation">@anim/alert_dialog_close</item>
    </style>

</resources>
